{
    "_version": "1.60.0",
    "sap.app": {
        "id": "<%= namespace %>",
        "type": "application",
        "i18n": "i18n/i18n.properties",
        "applicationVersion": {
            "version": "0.0.1"
        },
        "title": "{{appTitle}}",
        "description": "{{appDescription}}",
		"sourceTemplate": {
			"id": "basic_app",
			"version": "1.0.0"
		},<% if (serviceType === 'Rest' || serviceType === 'ODataV2' || serviceType === 'ODataV4') { %>
        "dataSources": {<% if (serviceType === 'Rest') { %>
            "mainServiceAPI": {
				"uri": "<%= servicePath %>",
				"type": "JSON",
				"settings": {
					"sapClient": "100"
				}
			},
			"ourCompanyHomepage": {
				"uri": "https://ourcompany.com.tr",
				"type": "JSON"
			},
			"clientCompanyHomepage": {
				"uri": "https://clientcompany.com.tr",
				"type": "JSON"
			}<% } else if (serviceType === 'ODataV2') { %>
            "mainService": {
                "uri": "<%= servicePath %>",
                "type": "OData",
                "settings": { "odataVersion": "2.0" }
            }<% } else if (serviceType === 'ODataV4') { %>
            "mainService": {
                "uri": "<%= servicePath %>",
                "type": "OData",
                "settings": { "odataVersion": "4.0" }
            }<% } %>
        }<% } %>
    },
    "sap.ui": {
        "technology": "UI5",
        "icons": {
            "icon": "",
            "favIcon": "",
            "phone": "",
            "phone@2": "",
            "tablet": "",
            "tablet@2": ""
        },
        "deviceTypes": {
            "desktop": true,
            "tablet": true,
            "phone": true
        }
    },
    "sap.ui5": {
        "flexEnabled": true,
		"rootView": {
			"viewName": "<%= namespace %>.view.App",
			"type": "XML",
			"async": true,
            "id": "App"
		},
        "dependencies": {
            "minUI5Version": "1.30.0",
            "libs": {
				"sap.ui.core": {},
				"sap.m": {},
				"sap.f": {},
				"sap.ui.layout": {},
				"sap.collaboration": {},
				"sap.ui.comp": {},
				"sap.uxap": {},
				"sap.ui.table": {},
				"sap.ushell": {}
            }
        },
        "contentDensities": {
            "compact": true,
            "cozy": true
        },
        "models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "<%= namespace %>.i18n.i18n",
					"supportedLocales": ["en", "tr"],
					"fallbackLocale": "en",
					"async": true
				}
			}<% if (serviceType === 'ODataV2') { %>,
            "oDataV2Model": {
                "dataSource": "v2Service",
                "preload": true,
                "settings": {
                    "defaultBindingMode": "TwoWay",
                    "useBatch": true,
                    "json": true
                }
            }<% } else if (serviceType === 'ODataV4') { %>
            "oDataV4Model": {
                "dataSource": "v4Service",
                "preload": true,
                "settings": {
                    "operationMode": "Server",
                    "groupId": "$auto",
                    "synchronizationMode": "None"
                }
            }<% } %>
        },
        "resources": {
            "css": [<% if (includeLogin) { %>
                { "uri": "css/style.css" },<% } %>
                { "uri": "css/boostrap.css" }
            ]
        },
        "routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewType": "XML",
				"async": true,
				"viewPath": "<%= namespace %>.view",
				"controlAggregation": "pages",
				"controlId": "app",
                "clearControlAggregation": false,
				"bypassed": {
				  "target": "notFound"
				}
			},
            "routes": [<% if (serviceType === 'Rest') { %><% if (includeLogin) { %>
                {
					"name": "Login",
					"pattern": "",
					"target": ["Login"]
				},
                {
					"name": "Home",
					"pattern": "Home",
					"target": ["Home"],
					"requiresAuth": true
				}<% } else { %>
                {
					"name": "Home",
					"pattern": "",
					"target": ["Home"]
				}<% } %><% } else { %>
				{
					"name": "Home",
					"pattern": "",
					"target": ["Home"]
				}<% } %>
            ],
            "targets": {<% if (serviceType === 'Rest') { %><% if (includeLogin) { %>
                "Login": {
					"viewName": "Login",
					"viewId": "Login",
					"viewPath": "<%= namespace %>.view",
					"viewLevel": 1
				},<% } %><% } %>
                "Home": {
                    "viewName": "Home",
                    "viewId": "Home",
                    "title": "{i18n>title}"
                },
				"notFound": { 
                    "viewName": "NotFound" 
                }
            }
        }
    }
}